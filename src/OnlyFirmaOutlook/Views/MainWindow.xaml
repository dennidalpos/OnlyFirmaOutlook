<Window x:Class="OnlyFirmaOutlook.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OnlyFirmaOutlook - Generatore Firme"
        Height="850" Width="750"
        MinHeight="750" MinWidth="650"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3">

    <Window.Resources>
        
        <Style x:Key="StepGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        
        <Style x:Key="CompletedStepStyle" TargetType="GroupBox" BasedOn="{StaticResource StepGroupBoxStyle}">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
        </Style>

        
        <Style x:Key="CurrentStepStyle" TargetType="GroupBox" BasedOn="{StaticResource StepGroupBoxStyle}">
            <Setter Property="BorderBrush" Value="#D13438"/>
        </Style>

        
        <Style x:Key="PendingStepStyle" TargetType="GroupBox" BasedOn="{StaticResource StepGroupBoxStyle}">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="BusyOverlay" Visibility="Collapsed" Panel.ZIndex="100" Grid.RowSpan="2">
            <Rectangle Fill="#80000000"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                <TextBlock x:Name="BusyMessage" Text="Elaborazione in corso..."
                           Foreground="White" FontSize="14" Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        
        <Grid Margin="16,16,16,0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="OnlyFirmaOutlook" FontSize="24" FontWeight="Bold"
                               Foreground="#0078D4" Margin="0,0,8,0"/>
                    <ToggleButton x:Name="GuideToggleButton"
                                  Content="Guida"
                                  FontWeight="SemiBold"
                                  Padding="10,4"
                                  Margin="0,2,0,0"
                                  Background="#FFF4CE"
                                  BorderBrush="#C19600"
                                  BorderThickness="2"
                                  Foreground="#6B5B00"
                                  Checked="GuideToggleButton_Checked"
                                  Unchecked="GuideToggleButton_Unchecked"/>
                </StackPanel>
                <TextBlock Text="Converti documenti Word in firme per Outlook"
                           FontSize="12" Foreground="#605E5C"/>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock x:Name="AppVersionText" FontSize="12" Foreground="#605E5C" TextAlignment="Right"/>
                <TextBlock Text="Sviluppato da Reparto IT" FontSize="11" Foreground="#605E5C"
                           TextAlignment="Right"/>
                <TextBlock x:Name="UserHostInfoText" FontSize="10" Foreground="#A19F9D"
                           TextAlignment="Right"/>
            </StackPanel>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16" Grid.Row="1">
            <StackPanel>

                
                <Border x:Name="OutlookWarningBorder" Visibility="Collapsed"
                        Background="#FFF4CE" BorderBrush="#C19600" BorderThickness="2"
                        CornerRadius="2" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock x:Name="OutlookWarningText" TextWrapping="Wrap"
                                   Foreground="#6B5B00" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                
                <GroupBox x:Name="Step1Group" Header="1. Seleziona firma da modificare" Style="{StaticResource CurrentStepStyle}">
                    <StackPanel>
                        <TextBlock Text="Preset disponibili:" Margin="0,0,0,4"/>
                        <ListBox x:Name="PresetListBox" Height="100"/>
                        <TextBlock x:Name="NoPresetsText" Text="Nessun preset disponibile nella cartella media"
                                   Visibility="Collapsed" Foreground="#A19F9D"
                                   FontStyle="Italic" Margin="8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="LoadCustomButton" Content="ðŸ“ Carica file Word..."
                                    Click="LoadCustomButton_Click"/>
                            <TextBlock x:Name="SelectedFileText" Text="Nessun file selezionato"
                                       VerticalAlignment="Center" Margin="12,0,0,0"
                                       Foreground="#605E5C"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                
                <GroupBox x:Name="Step2Group" Header="2. Configura nome e account" Style="{StaticResource PendingStepStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        
                        <Label Content="Nome firma:" Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center"/>
                        <TextBox x:Name="SignatureNameTextBox" Grid.Row="0" Grid.Column="1"
                                 TextChanged="SignatureNameTextBox_TextChanged"/>

                        
                        <Label x:Name="AccountLabel" Content="Account Outlook:"
                               Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"
                               Margin="0,8,0,0"/>
                        <ComboBox x:Name="AccountComboBox" Grid.Row="1" Grid.Column="1"
                                  Margin="0,8,0,0"
                                  SelectionChanged="AccountComboBox_SelectionChanged">
                            <ComboBox.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                       Foreground="#605E5C" Margin="0,4,0,2"/>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ComboBox.GroupStyle>
                        </ComboBox>

                        
                        <Label x:Name="IdentifierLabel" Content="Identificativo:"
                               Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
                               Margin="0,8,0,0" Visibility="Collapsed"/>
                        <TextBox x:Name="IdentifierTextBox" Grid.Row="2" Grid.Column="1"
                                 Margin="0,8,0,0" Visibility="Collapsed"/>
                        <TextBlock x:Name="IdentifierHint" Grid.Row="3" Grid.Column="1"
                                   Text="(Opzionale)"
                                   Foreground="#A19F9D" FontSize="11" Visibility="Collapsed"/>

                        
                        <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#E8F5E9"
                                CornerRadius="4" Padding="10" Margin="0,12,0,0"
                                x:Name="FinalNameBorder" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Nome finale:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                <TextBlock x:Name="FinalSignatureNameText" FontWeight="Bold" Foreground="#2E7D32"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </GroupBox>

                
                <GroupBox x:Name="Step3Group" Header="3. Cartella destinazione" Style="{StaticResource StepGroupBoxStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="DestinationFolderTextBox" Grid.Column="0"
                                     IsReadOnly="True"/>
                            <Button x:Name="BrowseFolderButton" Content="Sfoglia..."
                                    Grid.Column="1" Click="BrowseFolderButton_Click"/>
                        </Grid>

                        <TextBlock x:Name="FolderWritableText" Margin="0,4,0,0"/>
                    </StackPanel>
                </GroupBox>

                
                <GroupBox x:Name="Step4Group" Header="4. Modifica firma in Word" Style="{StaticResource PendingStepStyle}">
                    <StackPanel>
                        <Border Background="#FFF4CE" BorderBrush="#C19600" BorderThickness="2"
                                CornerRadius="2" Padding="12" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock TextWrapping="Wrap" Foreground="#6B5B00">
                                    <Run Text="âš  " FontWeight="Bold"/>
                                    <Run Text="Modifica in Word prima della conversione."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Stato:" FontWeight="SemiBold" VerticalAlignment="Center"
                                       Grid.Column="0" Margin="0,0,8,0"/>
                            <TextBlock x:Name="EditStatusText" Text="Seleziona prima una firma"
                                       VerticalAlignment="Center" Grid.Column="1"
                                       Foreground="Gray"/>
                            <Button x:Name="EditSignatureButton" Content="ðŸ“ Apri in Word"
                                    Grid.Column="2" Click="EditSignatureButton_Click"
                                    IsEnabled="False" MinWidth="130"/>
                        </Grid>

                        
                        <Border x:Name="WordOpenIndicator" Visibility="Collapsed"
                                Background="#E3F2FD" BorderBrush="#1976D2" BorderThickness="2"
                                CornerRadius="2" Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“– " FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Word Ã¨ aperto: modifica, salva, poi chiudi"
                                           Foreground="#1565C0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

                
                <GroupBox x:Name="Step5Group" Header="5. Opzioni export" Style="{StaticResource StepGroupBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="Formato HTML:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <RadioButton x:Name="FilteredHtmlRadio" Content="HTML Filtrato"
                                     GroupName="HtmlType"/>
                        <RadioButton x:Name="CompleteHtmlRadio" Content="HTML Completo (consigliato)"
                                     IsChecked="True" GroupName="HtmlType"/>

                        <TextBlock Text="Correzioni:" FontWeight="SemiBold" Margin="0,12,0,4"/>
                        <CheckBox x:Name="FixOutlook2512CheckBox"
                                  Content="Fix bordi tabelle Outlook 2512+"
                                  IsChecked="True"
                                  ToolTip="Corregge il bug di Outlook Classic 2512+ che aggiunge bordi indesiderati alle tabelle nelle firme"/>
                    </StackPanel>
                </GroupBox>

                
                <GroupBox x:Name="Step6Group" Header="6. Firme esistenti (verifica sovrascrittura)" Style="{StaticResource StepGroupBoxStyle}">
                    <StackPanel>
                        
                        <Border x:Name="OverwriteWarningBorder" Visibility="Collapsed"
                                Background="#FFEBEE" BorderBrush="#C62828" BorderThickness="2"
                                CornerRadius="2" Padding="10" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš  " FontSize="14" Foreground="#C62828" VerticalAlignment="Center"/>
                                <TextBlock x:Name="OverwriteWarningText" Foreground="#C62828"
                                           VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <ListBox x:Name="ExistingSignaturesListBox" Height="80"
                                 SelectionChanged="ExistingSignaturesListBox_SelectionChanged"/>
                        <TextBlock x:Name="NoSignaturesText" Text="Nessuna firma esistente"
                                   Visibility="Collapsed" Foreground="#A19F9D"
                                   FontStyle="Italic" Margin="8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="DeleteSignatureButton" Content="Elimina firma"
                                    Style="{StaticResource DangerButtonStyle}"
                                    Click="DeleteSignatureButton_Click" IsEnabled="False"/>
                            <Button x:Name="RefreshSignaturesButton" Content="Aggiorna lista"
                                    Click="RefreshSignaturesButton_Click"/>
                            <Button x:Name="BrowseSignaturesButton" Content="Sfoglia firme"
                                    Click="BrowseSignaturesButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                
                <GroupBox x:Name="Step7Group" Header="7. Backup firme" Style="{StaticResource StepGroupBoxStyle}">
                    <StackPanel>
                        <TextBlock x:Name="BackupFolderText"
                                   Text="Cartella backup: "
                                   Foreground="#605E5C" FontSize="11" Margin="0,0,0,6"/>
                        <ListBox x:Name="BackupsListBox" Height="100"
                                 SelectionChanged="BackupsListBox_SelectionChanged"/>
                        <TextBlock x:Name="NoBackupsText" Text="Nessun backup disponibile"
                                   Visibility="Collapsed" Foreground="#A19F9D"
                                   FontStyle="Italic" Margin="8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="RestoreBackupButton" Content="Ripristina backup"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="RestoreBackupButton_Click" IsEnabled="False"/>
                            <Button x:Name="DeleteBackupButton" Content="Elimina backup"
                                    Style="{StaticResource DangerButtonStyle}"
                                    Click="DeleteBackupButton_Click" IsEnabled="False"/>
                            <Button x:Name="RefreshBackupsButton" Content="Aggiorna lista"
                                    Click="RefreshBackupsButton_Click"/>
                            <Button x:Name="BrowseBackupsButton" Content="Sfoglia backup"
                                    Click="BrowseBackupsButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                
                
                <Button x:Name="ConvertButton" Content="âœ“ Converti e salva firma"
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Stretch" Height="48"
                        Click="ConvertButton_Click" IsEnabled="False"
                        FontSize="15" FontWeight="Bold"
                        Margin="0,4,0,16"/>

                
                <GroupBox Header="Log" Style="{StaticResource StepGroupBoxStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="120"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="LogTextBox" Grid.Row="0"
                                 Style="{StaticResource LogTextBoxStyle}"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 TextWrapping="NoWrap"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="CopyLogButton" Content="Copia log"
                                    Click="CopyLogButton_Click"/>
                            <Button x:Name="ClearLogButton" Content="Pulisci log"
                                    Click="ClearLogButton_Click"/>
                            <Button x:Name="OpenLogFileButton" Content="Apri file log"
                                    Click="OpenLogFileButton_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
